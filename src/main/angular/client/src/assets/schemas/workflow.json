{
  "title": "workflow",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "workflow",
  "type": "object",
  "required": [
    "instructions"
  ],
  "propertyOrder": [
    "path",
    "instructions",
    "jobs"
  ],
  "description": "deploy object with fixed property 'TYPE':'Workflow'",
  "properties": {
    "path": {
      "description": "absolute path of a JobScheduler object.",
      "type": "string",
      "pattern": "^(/|(/[^/\\<>?:\"|*]+)+)$",
      "maxLength": 255,
      "minLength": 1
    },
    "instructions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "TYPE"
        ],
        "properties": {
          "TYPE": {
            "type": "string",
            "enum": [
              "Execute.Named",
              "If",
              "Try",
              "Fork",
              "Finish",
              "Fail",
              "Retry",
              "Publish",
              "Await"
            ]
          }
        }
      }
    },
    "title": {
      "type": "string",
      "pattern": "^[^<>]*$",
      "maxLength": 255
    },
    "jobs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "agentId",
          "executable",
          "taskLimit"
        ],
        "properties": {
          "agentId": {
            "type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255
          },
          "executable": {
            "type": "object",
            "required": [
              "TYPE",
              "script"
            ],
            "propertyOrder": [
              "TYPE",
              "script"
            ],
            "properties": {
              "script": {
                "type": "string",
                "minLength": 1
              },
              "TYPE": {
                "type": "string",
                "enum": [
                  "ExecutableScript"
                ]
              }
            },
            "additionalProperties": false
          },
          "returnCodeMeaning": {
            "type": "object",
            "oneOf": [
              {
                "required": [
                  "success"
                ]
              },
              {
                "required": [
                  "failure"
                ]
              }
            ],
            "properties": {
              "success": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "number"
                }
              },
              "failure": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "number"
                }
              }
            },
            "additionalProperties": false
          },
          "taskLimit": {
            "type": "number",
            "minimum": 1,
            "default": 1
          },
          "timeout": {
            "type": "number",
            "minimum": 0
          },
          "graceTimeout": {
            "type": "number",
            "minimum": 0
          },
          "jobClass": {
            "description": "absolute path of a JobScheduler object.",
            "type": "string",
            "pattern": "^(/|(/[^/\\<>?:\"|*]+)+)$",
            "maxLength": 255,
            "minLength": 1
          },
          "defaultArguments": {
            "description": "a map for arbitrary key-value pairs",
            "type": "object",
            "returnCode": {
              "type": "number"
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          "title": {
            "type": "string",
            "pattern": "^[^<>]*$",
            "maxLength": 255
          },
          "logLevel": {
            "type": "string",
            "enum": [
              "INFO",
              "DEBUG",
              "TRACE"
            ]
          },
          "criticality": {
            "type": "string",
            "enum": [
              "NORMAL",
              "CRITICAL"
            ]
          },
          "path": {
            "description": "absolute path of a JobScheduler object.",
            "type": "string",
            "pattern": "^(/|(/[^/\\<>?:\"|*]+)+)$",
            "maxLength": 255,
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
